<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.zevzhu.wanandroid.mvvm.ui.fragment.MainFragment"
        android:label="MainFragment" />

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.zevzhu.wanandroid.mvvm.ui.fragment.HomeFragment"
        android:label="HomeFragment" />

    <action
        android:id="@+id/action_global_webPageFragment"
        app:destination="@id/webPageFragment"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right" />

    <action
        android:id="@+id/action_system_to_sysDetail"
        app:destination="@id/sysDetailFragment"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right" />

    <fragment
        android:id="@+id/projectFragment"
        android:name="com.zevzhu.wanandroid.mvvm.ui.fragment.ProjectFragment"
        android:label="ProjectFragment" />
    <fragment
        android:id="@+id/systemFragment"
        android:name="com.zevzhu.wanandroid.mvvm.ui.fragment.SystemFragment"
        android:label="SystemFragment">
    </fragment>
    <fragment
        android:id="@+id/wxFragment"
        android:name="com.zevzhu.wanandroid.mvvm.ui.fragment.WxFragment"
        android:label="WxFragment" />
    <fragment
        android:id="@+id/myFragment"
        android:name="com.zevzhu.wanandroid.mvvm.ui.fragment.MyFragment"
        android:label="MyFragment" />
    <fragment
        android:id="@+id/webPageFragment"
        android:name="com.zevzhu.wanandroid.mvvm.ui.fragment.WebPageFragment"
        android:label="WebPageFragment" />
    <fragment
        android:id="@+id/sysDetailFragment"
        android:name="com.zevzhu.wanandroid.mvvm.ui.fragment.SysDetailFragment"
        android:label="SysDetailFragment" />
</navigation>