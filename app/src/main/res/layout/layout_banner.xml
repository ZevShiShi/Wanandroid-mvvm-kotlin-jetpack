<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.youth.banner.Banner
        android:id="@+id/homeBanner"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:banner_auto_loop="true"
        app:banner_indicator_gravity="center"
        app:banner_indicator_normal_color="@android:color/darker_gray"
        app:banner_indicator_normal_width="5dp"
        app:banner_indicator_selected_color="@android:color/holo_red_dark"
        app:banner_indicator_selected_width="5dp"
        app:banner_indicator_space="10dp"
        app:banner_infinite_loop="true" />
</FrameLayout>